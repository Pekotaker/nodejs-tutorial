<%- include('../_partial/_header'); -%>
    <div class = "col-md-8">
        <div class = "panel panel-default">
            <div class = "panel-heading">
                <h3>Log In</h3>
            </div>
            <div class ="panel-body">
                <form class = "form-signin" method = "POST" action = "/login">
                    <div class = "input-group">
                        <span class = "input-group-addon" id="basic-addon1"><span class = "glyphicon glyphicon-user"></span></span>
                        <input type = "text" id = "text1" class = "form-control" placeholder = "Username or email" name = "username" aria-describedby = "basic-addon1">
                    </div>
                    <br />
                    <div class = "input-group">
                        <span class = "input-group-addon" id="basic-addon1"><span class = "glyphicon glyphicon-lock" aria-hidden = "true"></span></span>
                        <input type = "password" class = "form-control" placeholder="Password" name = "password" aria-describedby="basic-addon1">
                    </div>
                    <div>
                        <br />
                        <a href = "/signup"><i>Create new account</i></a>
                        <br />
                        <input type = "submit" class = "btn btn-default navbar-btn" value = "Log In" onclick = "validate()"/>
                    </div>
                    <script>
                        function validate() {
                            var field = document.getElementById('text1').value;
                    
                            // CHeck if email
                            if (/\@/.test(field)) {
                                field.setAttribute("username", "email");
                            }
                        }
                    </script>
                </form>
            </div>
        </div>
    </div>

<%- include('../_partial/_footer'); -%>