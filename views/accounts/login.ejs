<%- include('../_partial/_header'); -%>

    <br/>
    <div class = "card" style="width: 750px;">
        <div class = "card">
            <div class = "card-header text-center">
                <h3>Log In</h3>
            </div>
            <div class ="card-body">
                <form class = "form-signin" method = "POST" action = "/login">
                    <div class = "input-group">

                        <input type = "text" id = "text1" class = "form-control" placeholder = "ID or email" name = "studentID" aria-describedby = "basic-addon1">
                        <br />
                    </div>
                    <br />
                    <div class = "input-group">

                        <input type = "password" class = "form-control" placeholder="Password" name = "password" aria-describedby="basic-addon1">
                        <br />
                    </div>
                    <div>
                        <br/>
                        <a href = "/register"><i>Create new account</i></a>
                        <br />
                        <input type = "submit" class = "btn btn-default navbar-btn" value = "Log In" onclick = "validate()" style = "background-color: green; color:white;"/>
                    </div>
                    <script>
                        function validate() {
                            var field = document.getElementById('text1').value;
                    
                            // CHeck if email
                            if (/\@/.test(field)) {
                                field.setAttribute("studentID", "email");
                            }
                        }
                    </script>
                

                </form>
            </div>
        </div>
    </div>

<%- include('../_partial/_footer'); -%>